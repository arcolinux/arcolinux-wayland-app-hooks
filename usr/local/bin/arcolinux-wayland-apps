#tput setaf 0 = black 
#tput setaf 1 = red 
#tput setaf 2 = green
#tput setaf 3 = yellow 
#tput setaf 4 = dark blue 
#tput setaf 5 = purple
#tput setaf 6 = cyan 
#tput setaf 7 = gray 
#tput setaf 8 = light blue
##################################################################################################################

if [ -f /usr/share/wayland-sessions/hyprland.desktop ]; then
	echo
	tput setaf 2
	echo "################################################################"
	echo "################### We are on hyprland"
	echo "################### Submit packages to change on Wayland"
	echo "################### We did not change anything"	
	echo "################################################################"
	tput sgr0
	echo
	
	echo
	echo "Changing flameshot"
	echo
	if [ -f /usr/share/applications/org.flameshot.Flameshot.desktop ]; then
		FIND="Exec=\/usr\/bin\/flameshot"
		REPLACE="Exec=/usr/bin/env GDK_BACKEND=x11 \/usr\/bin\/flameshot"
		sudo sed -i "s/$FIND/$REPLACE/g" /usr/share/applications/org.flameshot.Flameshot.desktop
	fi

fi
